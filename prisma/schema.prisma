// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Part {
  id              String    @id @default(cuid())
  partNumber      String    @unique
  description     String
  brand           String?
  category        String?
  cachedImageUrl  String?
  lastImageUpdate DateTime?
  costPrice       Decimal?  @db.Decimal(10, 2)
  sellingPrice    Decimal?  @db.Decimal(10, 2)
  stockQuantity   Int       @default(0)
  
  // AI-Enriched Data
  compatibleVehicles Json?   // Array of {make, model, years, engine}
  specifications     Json?   // Technical specs
  oemStatus         String?  // "OEM" or "Aftermarket"
  estimatedLifespan String?  // e.g., "80,000-100,000 km"
  interchangeableParts Json? // Array of alternative part numbers
  aiNotes           String?  @db.Text
  lastEnriched      DateTime?
  enrichmentStatus  String    @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  enrichmentError   String?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([partNumber])
  @@index([brand])
  @@index([category])
}

model Customer {
  id          String    @id @default(cuid())
  code        String    @unique // e.g., "2WZ"
  name        String
  email       String?   @unique
  phone       String?
  company     String?
  address     String?
  vatNumber   String?
  country     String
  vatRate     Decimal   @db.Decimal(4, 2) // 0.05 for 5%, 0.15 for 15%
  currency    String    @default("AED")
  zohoId      String?   @unique // Zoho Books customer ID
  lastSynced  DateTime? // Last sync with Zoho
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  quotes      Quote[]

  @@index([code])
  @@index([email])
}

model Quote {
  id              String    @id @default(cuid())
  referenceNumber String    @unique // DTSB-2WZ-10JAN26
  customerId      String
  status          String    @default("draft") // draft, sent, approved, converted, cancelled
  totalExclVAT    Decimal   @db.Decimal(12, 2)
  vatRate         Decimal   @db.Decimal(4, 2)
  vatAmount       Decimal   @db.Decimal(12, 2)
  grandTotal      Decimal   @db.Decimal(12, 2)
  zohoEstimateId  String?
  pdfUrl          String?
  notes           String?   @db.Text
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  customer        Customer  @relation(fields: [customerId], references: [id])
  items           QuoteItem[]

  @@index([referenceNumber])
  @@index([customerId])
  @@index([status])
  @@index([createdAt])
}

model QuoteItem {
  id          String  @id @default(cuid())
  quoteId     String
  srNumber    Int     // Sequential row number
  partNumber  String
  description String
  brand       String?
  category    String?
  quantity    Int
  unitPrice   Decimal @db.Decimal(10, 2)
  discount    Decimal @default(0) @db.Decimal(5, 2)
  total       Decimal @db.Decimal(12, 2)
  imageUrl    String?
  
  quote       Quote   @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  @@index([quoteId])
  @@index([partNumber])
}

model ImageCache {
  id          String   @id @default(cuid())
  partNumber  String   @unique
  imageUrl    String
  quality     String   // high, medium, low
  source      String   // google, bing, manual
  createdAt   DateTime @default(now())
  lastUsed    DateTime @default(now())

  @@index([partNumber])
}

// Master Catalog System

model MasterCategory {
  id          String       @id @default(cuid())
  name        String       @unique // e.g., "Brake System"
  slug        String       @unique // e.g., "brake-system"
  parentId    String?
  parent      MasterCategory? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    MasterCategory[] @relation("CategoryHierarchy")
  parts       MasterPart[]
  
  description String?
  imageUrl    String?

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([parentId])
}

model MasterPart {
  id              String         @id @default(cuid())
  partNumber      String         @unique
  name            String         // Standardized name
  description     String?        @db.Text
  brand           String
  categoryId      String?
  category        MasterCategory? @relation(fields: [categoryId], references: [id])
  
  // Rich Data
  specifications  Json?          // Key-value pairs of technical specs
  compatibility   Json?          // Vehicle fitment data
  images          String[]       // Array of image URLs
  diagrams        String[]       // Array of diagram URLs
  
  // Cross-Reference
  alternatives    Json?          // List of alternative part numbers
  oemNumbers      String[]       // Original Equipment Manufacturer numbers
  
  isActive        Boolean        @default(true)
  popularityScore Int            @default(0) // For ranking search results

  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([partNumber])
  @@index([brand])
  @@index([categoryId])
}
